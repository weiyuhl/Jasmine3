root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
max_line_length = 120

[*.{xml,json}]
indent_size = 2

[*.{md,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false
